BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            text: app.input_value
            font_size: 45
            multiline: False
            on_text: app.update_value()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                id: increase_button
                text: 'Up'
                on_press: app.increment_value(1)
            Button:
                id: decrease_button
                text: 'Down'
                on_press: app.increment_value(-1)
    Label:
        id: output_label
        text: app.result
        font_size: 45
        color: (1, 1, 0, 1)